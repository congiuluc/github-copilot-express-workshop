{
  "name": "GitHub Copilot Workshop - Java",
  "image": "mcr.microsoft.com/devcontainers/java:17",
  "features": {
    "ghcr.io/devcontainers/features/azure-cli:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/maven:1": {
      "version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "vscjava.vscode-java-pack",
        "vscjava.vscode-spring-boot-dashboard",
        "pivotal.vscode-spring-boot",
        "ms-azuretools.vscode-azureappservice",
        "ms-azuretools.vscode-azurefunctions",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-json",
        "humao.rest-client"
      ],
      "settings": {
        "github.copilot.enable": {
          "*": true,
          "yaml": false,
          "plaintext": false,
          "markdown": true
        },
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll": "explicit"
        },
        "java.configuration.updateBuildConfiguration": "automatic",
        "java.completion.enabled": true,
        "java.debug.settings.enableRunDebugCodeLens": true,
        "spring-boot.ls.java.heap-dump.enabled": true
      }
    }
  },
  "forwardPorts": [8080, 8081, 9090],
  "postCreateCommand": "java --version && mvn --version && echo 'â˜• Java Codespace ready! Open workshop-java.md to get started.'",
  "remoteUser": "vscode"
}
